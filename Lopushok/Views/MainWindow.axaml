<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lopushok.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Lopushok.Views"
        xmlns:converters="clr-namespace:Lopushok.Converters"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Lopushok.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lopushok - Список продукции">
    
    <Window.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>
    
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <DockPanel>
                <ComboBox x:Name="ComboFilter" Width="150" DockPanel.Dock="Left" 
                         Margin="0,0,10,0" SelectionChanged="SelectionChanged">
                    <ComboBoxItem>Все</ComboBoxItem>
                    <ComboBoxItem>По убыванию</ComboBoxItem>
                    <ComboBoxItem>По возрастанию</ComboBoxItem>
                </ComboBox>
                
                <TextBox x:Name="SerchBox" Watermark="Поиск..." TextChanged="TextChanged"/>
            </DockPanel>
        </StackPanel>
        
        <StackPanel x:Name="PaginationPanel" DockPanel.Dock="Bottom" 
                   Orientation="Horizontal" HorizontalAlignment="Center">
        </StackPanel>
        
        <ScrollViewer>
            <ItemsControl x:Name="ProductsContainer">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                               Padding="10" Width="200" Height="250" Margin="5">
                            <StackPanel>
                                <Image Height="120" Width="180" Margin="0,0,0,8" 
                                       Stretch="UniformToFill"
                                       Source="{Binding IMAGE, Converter={StaticResource ImagePathConverter}}"/>
                                
                                <TextBlock Text="{Binding NAME_PRODUCT}" FontWeight="Bold" 
                                          TextWrapping="Wrap" MaxHeight="40"/>
                                <TextBlock Text="{Binding TYPE}" Foreground="Gray"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Артикул:"/>
                                    <TextBlock Text="{Binding ARTIKUL}" FontWeight="SemiBold" 
                                              Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Цена от:"/>
                                    <TextBlock Text="{Binding MIN_PRICE, StringFormat='{}{0:C2}'}" 
                                              FontWeight="SemiBold" Foreground="Green"
                                              Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Кол-во:"/>
                                    <TextBlock Text="{Binding KOLICHESTVO_DLYA_PROIZVODSTVA}" 
                                              FontWeight="SemiBold" Margin="5,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="{Binding NOMER_CEHA}" Foreground="Blue"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>